<li class="list-none w-full p-2">
  <%= form_with model: @report, url: report_path(@report), method: :patch, local: true, data: { turbo_frame: 'edit-form' } do |form| %>

    <div class="flex flex-row items-center">

        <div class="w-1/3">
          <div class="flex flex-row items-center w-1/2 m-auto">
            <%= form.label :challenge_unit, "Rep type", class: "text-sm font-medium text-gray-700 mr-2" %>
            <%= form.collection_select :challenge_unit_id,
                                      @report.challenge.challenge_units,
                                      :id,
                                      :rep_name 
            %>
          </div>
        </div>
        <div class="w-1/3 m-auto">
          <div class="flex flex-row items-center text-sm font-medium truncate w-1/3">
            <%= form.label :rep_count, class: "mr-2" %>
            <%= form.number_field :rep_count, class: "form-control" %>
          </div>
        </div>

        <div class="flex flex-row w-1/3 text-sm text-gray-800 justify-end">
          <%= form.submit "Update", class: "text-indigo-600 hover:text-indigo-900 font-semibold mr-4" %>
          <%= link_to reports_path, class: "text-danger-600 font-semibold hover:text-danger-900", data: { turbo_frame_action: "replace", turbo_frame_target: "edit-form" } do %>
            <span class="mr-1">
              <i class="fas fa-times"></i>
            </span>
          <% end %>          
        </div>
    </div>
  <% end %>
</li>
