<%= form_with(model: ChallengeUnit.new, url: add_units_challenge_path(challenge), local: true) do |form| %>
  <div class="mb-2 flex flex-row items-center justify-between rounded-lg border border-gray-300 bg-white px-4 shadow-sm focus-within:ring-2 focus-within:ring-indigo-500 focus-within:ring-offset-2">
    <div class="flex-1 min-w-0 px-4 md:grid md:grid-cols-3 md:gap-4">

      <div class="inline-flex items-center min-w-1/3">
        <%= form.label :name, class: "mr-2 font-bold" %>
        <%= form.text_field :rep_name, name: 'challenge_units[][challenge_unit][rep_name]', class: "form-control" %>
      </div>

      <div class="inline-flex items-center min-w-1/3">
        <%= form.label :points, class: "mr-2 font-bold" %>
        <%= form.number_field :points, name: 'challenge_units[][challenge_unit][points]', class: "form-control" %>
      </div>

      <div class="flex flex-col items-center">
        <%= form.button button_text("create"), class: "font-semibold text-indigo-600 hover:text-primary-900" %>
        <%= link_to "cancel", challenge_path(challenge), class: " font-semibold text-danger-600 hover:text-danger-900" %>
      </div>

    </div>
  </div>
<% end %>
