<%= form_with(model: ChallengeUnit.new, url: add_units_challenge_path(challenge), local: true) do |form| %>
  <div class="flex flex-row ml-4 w-2/3 justify-between overflow-scroll">

    <div class="form-group w-1/3">
      <%= form.text_field :rep_name, name: 'challenge_units[][challenge_unit][rep_name]', class: "form-control" %>
    </div>

    <div class="form-group w-1/3">
      <%= form.number_field :points, name: 'challenge_units[][challenge_unit][points]', class: "form-control" %>
    </div>

    <div class="mt-2 text-sm font-medium">
      <%= form.button button_text("create"), class: "mr-2 text-indigo-600 hover:text-primary-900" %>
      <%= link_to "cancel", challenge_path(challenge), class: "text-danger-600 hover:text-danger-900" %>
    </div>

  </div>
<% end %>
