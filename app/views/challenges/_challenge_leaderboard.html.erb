<div class="flex flex-col min-w-full">
  <div class="overflow-x-auto sm:w-auto">
    <div class="flow-root sm:overflow-auto">
      <div class="divide-y divide-gray-300 justify-start">
        <div class="inline flex text-left text-sm font-semibold text-gray-900">
          <h1 class="text-base font-semibold leading-6 text-gray-900 sm:pl-0 mr-2">Leaderboard</h1>
        </div>

        <% challenge.leaderboard.each_with_index do |(user, points), index| %>
          <% badge = leaderboard_badge(index) %>
          <div class="flex py-4 text-sm font-medium text-gray-900 justify-between">
            <div class="flex justify-between w-2/3">
              <p class="whitespace-nowrap pr-3"><%= "#{badge} #{user[0].full_name}" %></p>
              <p class="inline-flex min-w-[4rem] whitespace-nowrap text-left"><%= points %></p>
            </div>
            <%= link_to "Reports", user_reports_challenge_path(user_id: user[0].id), class: 'font-bold text-primary-600 hover:text-primary-900 ml-4' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

