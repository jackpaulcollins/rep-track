<div class="sm:flex sm:items-center">
  <div class="sm:flex-auto">
    <h1 class="text-base font-semibold leading-6 text-gray-900">Participants</h1>
    <p class="mt-2 text-sm text-gray-700">Users enrolled in this challenge</p>
  </div>
</div>
<div class="mt-8 flow-root">
  <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
      <table class="min-w-full divide-y divide-gray-300">
        <thead>
          <tr>
            <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-0">Name</th>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Email</th>
            <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-0">
              <span class="sr-only">Email</span>
            </th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
        <% participants.each do |ce| %>
          <%- user = ce.user %>
          <tr>
            <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-0"><%= user.first_name %></td>
            <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= user.email %></td>
            <% if ce.challenge.is_challenge_owner?(current_user) %>
              <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-0">
                <%= button_to "Unenroll", unenroll_challenge_enrollment_path(ce.challenge, user_id: ce.user_id), method: :post, class: "font-bold text-indigo-600 hover:text-indigo-900", data: { turbo_confirm: "Unenrolling will erase the users points." } %>
              </td>
            <% end %>
          </tr>
        <% end %>
        <% if challenge.challenge_invitations.any? %>
          <% challenge.challenge_invitations.each do |i| %>
            <tr>
              <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-0"><%= i.name %></td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= i.email %></td>
              <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm text-red-600 font-bold sm:pr-0">
                Invited
              </td>
            </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
